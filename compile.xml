<project name="ebooks" default="compile">
	<description>
        compile the specific tasks used in build.xml
    </description>

	<path id="libs">
		<fileset dir="lib">
			<include name="**/*.jar" />
		</fileset>
	</path>
	
	<target name="compile">
		<delete file="bin" />
		<mkdir dir="bin"/>
		<!-- compile specific tasks -->
		<javac srcdir="src" destdir="bin">
			<classpath refid="libs" />
		</javac>
    </target>

</project>